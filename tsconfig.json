{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "*": ["*"]
        },
        "lib": ["ES6"],
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "require": ["tsconfig-paths/register"]
    },
    "include": ["src", "scripts"],
    "exclude": ["node_modules"]
}
